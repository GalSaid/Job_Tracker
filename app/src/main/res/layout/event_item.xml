<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--CardView that holds the elements
        of the child RecyclerView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/event_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/event_LBL_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/data_text_size"
                        android:text="she returned after one 1"
                        />



                    <com.google.android.material.imageview.ShapeableImageView

                        android:id="@+id/event_IMAGEVIEW_Edit"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/ic_pencil"

                        />

                </LinearLayout>

                <!--Text in the CardView-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_LBL_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingEnd="12dp"
                    android:text="dcjkhcfdjskfhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhufhfshuhsfvuhsiuvfishvfiusghsuidevfhudsivfhudisvfghdiusfhiusdfhisdfvsidddddddddddddddd"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textSize="@dimen/data_text_size"
                    />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/event_LBL_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/data_end_margin"
                android:layout_marginBottom="@dimen/data_margin"
                android:layout_marginEnd="@dimen/data_end_margin"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="@dimen/data_text_size"
                android:text="2024-01-01" />

            </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>